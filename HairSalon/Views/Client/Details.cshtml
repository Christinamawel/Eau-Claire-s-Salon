@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Appointment>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h2>No Appointments have been added</h2>
}

<ul>
@foreach (Appointment appointment in Model)
{
  <li>Appointment time and date: appointment.TimeAndDate</li>
  <li>Appointment cost: appointment.AppointmentCost</li>
  @if (@appointment.Paid == 1)
  {
    <li>Paid: Paid</li>
  }
  else
  {
    <li>Paid: Unpaid</li>
  }
}
</ul>

<p>@Html.ActionLink("Add new appointment", "Create", "Appointment")</p>