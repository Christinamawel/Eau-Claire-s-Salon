@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Add a new stylist</h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.DateStarted)
  @Html.TextBoxFor(model => model.DateStarted, "{0:yyyy-MM-dd}", new {@type = "date"})

  @Html.LabelFor(model => model.Pay)
  @Html.TextBoxFor(model => model.Pay, new { type = "decimal"})

  <input type="submit" value="Add new stylist" />
}

<p>@Html.ActionLink("Back to stylist list", "Index")</p>