@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Stylist>;

<h1>Stylists<h1>

@if (@Model.Count == 0)
{
  <h2>No stylists have been added</h2>
}

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Index", new { id = stylist.StylistId })</li>
}

<p>@Html.ActionLink("Add new stylist", "Create")</p>